{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title":"domain_headers_charts",
  "type":"object",
  "properties":{
    "type":{
      "type":"string",
      "enum":[
        "c"
      ],
      "description":"Header type could be either c-charts, r-regular or t-transposed."
    },
    "transpose_columns":{
      "type":"array"
    },
    "rows":{
      "type":"array",
      "items":{
        "type":"object",
        "properties":{
          "display_order":{
            "type":"integer"
          },
          "friendly_name":{
            "type":"string",
            "description":"unique display name to display rows on the ME UI."
          },
          "row_id":{
            "type":"integer",
            "description":"unique app managed row identifier."
          },
          "column_values":{
            "type":"array",
            "items":{
              "type":"object",
              "properties":{
                "dbcolumn":{
                  "type":"string"
                },
                "dbvalue":{
                  "type":"string"
                },
                "display_literal":{
                  "type":"string"
                }
              }
            },
            "uniqueItems":true
          }
        },
        "required":[
          "row_id",
          "display_order",
          "column_values",
          "friendly_name"
        ],
        "auto":[
          "row_id",
          "display_order"
        ],
        "unique":[
          "row_id",
          "display_order",
          "friendly_name"
        ]
      }
    },
    "entries":{
      "type":"array",
      "items":{
        "type":"object",
        "oneOf":[
          {
            "$ref":"parent_header"
          },
          {
            "$ref":"group_header"
          },
          {
            "$ref":"scope_header"
          },
          {
            "$ref":"pivot_header"
          },
          {
            "$ref":"multi_measure_simple_charts"
          }
        ]
      }
    }
  },
  "required":[
    "type"
  ]
}